@model RahmanoForOCS.Models.ApplicationType

<form method="post" asp-action="DeletePost">
    <input asp-for="TypeId" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Application Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TypeName" disabled class="form-control" />
                    </div>
                </div>                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeDescripton"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TypeDescripton" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (@ViewBag.comment != null)
                            {
                <input type="submit" disabled="disabled" class="btn btn-danger w-100" value="Delete" /> }
                            else
                            {
                <input type="submit" class="btn btn-danger w-100" value="Delete" />}
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
        @ViewBag.comment
    </div>
</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" /> }

}