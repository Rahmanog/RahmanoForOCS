@model RahmanoForOCS.Models.Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryDescription"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="CategoryDescription" class="form-control" />
                        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>                <div class="form-group row">
                    <div class="col-9 offset-3 row">
                        <div style="width:150px;">
                            @if (@ViewBag.comment != null)
                            {
                                <input type="submit" disabled="disabled" class="btn btn-info w-75" value="Edit" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-info w-75" value="Edit" />
                            }
                        </div>
                        <div style="width:150px;">
                            <a asp-action="Index" class="btn btn-success w-75"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @ViewBag.comment
    </div>
</form> 

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}